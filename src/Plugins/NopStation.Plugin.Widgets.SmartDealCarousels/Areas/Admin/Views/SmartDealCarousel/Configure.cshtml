@model ConfigurationModel

@{
    NopHtml.SetActiveMenuItemSystemName("SmartDealCarousels.Configuration");
    ViewBag.PageTitle = T("Admin.NopStation.SmartDealCarousels.Configuration").Text;
}

<form asp-controller="SmartDealCarousel" asp-action="Configure" method="post">
    <div class="content-header clearfix">
        <h1 class="float-left">
            @T("Admin.NopStation.SmartDealCarousels.Configuration")
        </h1>
        <div class="float-right">
            <button type="submit" name="save" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.Save")
            </button>
        </div>
    </div>

    <section class="content">
        <div class="container-fluid">
            <div class="form-horizontal">
                @await Component.InvokeAsync(typeof(StoreScopeConfigurationViewComponent))
                <div asp-validation-summary="All"></div>
                <div class="cards-group">
                    <div class="card card-default">
                        <div class="card-body">
                            <div class="form-group row">
                                <div class="col-md-4">
                                    <nop-override-store-checkbox asp-for="EnableCarousel_OverrideForStore" asp-input="EnableCarousel" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                    <nop-label asp-for="EnableCarousel" />
                                </div>
                                <div class="col-md-8">
                                    <nop-editor asp-for="EnableCarousel" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-4">
                                    <nop-override-store-checkbox asp-for="EnableAjaxLoad_OverrideForStore" asp-input="EnableAjaxLoad" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                    <nop-label asp-for="EnableAjaxLoad" />
                                </div>
                                <div class="col-md-8">
                                    <nop-editor asp-for="EnableAjaxLoad" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-4">
                                    <nop-override-store-checkbox asp-for="CarouselPictureSize_OverrideForStore" asp-input="CarouselPictureSize" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                    <nop-label asp-for="CarouselPictureSize" />
                                </div>
                                <div class="col-md-8">
                                    <nop-editor asp-for="CarouselPictureSize" asp-postfix="px" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</form>
