@model FlipbookContentModel

@{
    Layout = "_AdminLayout";
    NopHtml.SetActiveMenuItemSystemName("Flipbooks");
    ViewBag.PageTitle = T("Admin.NopStation.Flipbooks.FlipbookContents.EditDetails").Text;
}

<form asp-controller="Flipbook" asp-action="ContentEdit" method="post" id="flipbookcontents-form">
    <div class="content-header clearfix">
        <h1 class="float-left">
            @T("Admin.NopStation.Flipbooks.FlipbookContents.EditDetails")
            <small>
                <i class="fas fa-arrow-circle-left"></i>
                <a asp-controller="Flipbook" asp-action="Edit" asp-route-id="@Model.FlipbookId">@T("Admin.NopStation.Flipbooks.FlipbookContents.BackToFlipbookDetails")</a>
            </small>
        </h1>
        <div class="float-right">
            <button type="submit" name="save" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.Save")
            </button>
            <button type="submit" name="save-continue" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.SaveContinue")
            </button>
            <span id="flipbookcontent-delete" class="btn btn-danger">
                <i class="far fa-trash-alt"></i>
                @T("Admin.Common.Delete")
            </span>
        </div>
    </div>
    @await Html.PartialAsync("_CreateOrUpdateContent", Model)
</form>
<nop-delete-confirmation asp-model-id="@Model.Id" asp-button-id="flipbookcontent-delete" asp-action="ContentDelete" />