                <div class="cards-group">
                    <div class="card card-default">
                        <div class="card-body">
                            <div class="form-group row">
                                <div class="col-md-3">
                                    <nop-override-store-checkbox asp-for="EnableMeetingLink_OverrideForStore" asp-input="EnableMeetingLink" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                    <nop-label asp-for="EnableMeetingLink" />
                                </div>
                                <div class="col-md-9">
                                    <nop-editor asp-for="EnableMeetingLink" />
                                    <span asp-validation-for="EnableMeetingLink"></span>
                                </div>
                            </div>

                            <nop-nested-setting asp-for="EnableMeetingLink" disable-auto-generation="true">
                                <div class="form-group row" id="ARContactUs_MeetingLink">
                                    <div class="col-md-3">
                                        <nop-override-store-checkbox asp-for="MeetingLink_OverrideForStore" asp-input="MeetingLink" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                        <nop-label asp-for="MeetingLink" />
                                    </div>
                                    <div class="col-md-9">
                                        <nop-editor asp-for="MeetingLink" />
                                        <span asp-validation-for="MeetingLink"></span>
                                    </div>
                                </div>
                            </nop-nested-setting>
                            <div class="form-group row">
                                <div class="col-md-3">
                                    <nop-override-store-checkbox asp-for="EnableMessenger_OverrideForStore" asp-input="EnableMessenger" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                    <nop-label asp-for="EnableMessenger" />
                                </div>
                                <div class="col-md-9">
                                    <nop-editor asp-for="EnableMessenger" />
