                            <nop-nested-setting asp-for="EnableTawkChat" disable-auto-generation="true">
                                <div class="form-group row" id="ARContactUs_TawkChatSrc">
                                    <div class="col-md-3">
                                        <nop-override-store-checkbox asp-for="TawkChatSrc_OverrideForStore" asp-input="TawkChatSrc" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                        <nop-label asp-for="TawkChatSrc" />
                                    </div>
                                    <div class="col-md-9">
                                        <nop-editor asp-for="TawkChatSrc" />
                                        <span asp-validation-for="TawkChatSrc"></span>
                                    </div>
                                </div>
                            </nop-nested-setting>

                            <div class="form-group row">
                                <div class="col-md-3">
                                    <nop-override-store-checkbox asp-for="EnableWhatsapp_OverrideForStore" asp-input="EnableWhatsapp" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                    <nop-label asp-for="EnableWhatsapp" />
                                </div>
                                <div class="col-md-9">
                                    <nop-editor asp-for="EnableWhatsapp" />
                                    <span asp-validation-for="EnableWhatsapp"></span>
                                </div>
                            </div>

                            <nop-nested-setting asp-for="EnableWhatsapp" disable-auto-generation="true">
                                <div class="form-group row" id="ARContactUs_WhatsappNumber">
                                    <div class="col-md-3">
                                        <nop-override-store-checkbox asp-for="WhatsappNumber_OverrideForStore" asp-input="WhatsappNumber" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                        <nop-label asp-for="WhatsappNumber" />
                                    </div>
                                    <div class="col-md-9">
                                        <nop-editor asp-for="WhatsappNumber" />
                                        <span asp-validation-for="WhatsappNumber"></span>
                                    </div>
                                </div>
                            </nop-nested-setting>

                            <div class="form-group row">
                                <div class="col-md-3">
                                    <nop-override-store-checkbox asp-for="EnableDirectContactUs_OverrideForStore" asp-input="EnableDirectContactUs" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                    <nop-label asp-for="EnableDirectContactUs" />
                                </div>
                                <div class="col-md-9">
                                    <nop-editor asp-for="EnableDirectContactUs" />
                                    <span asp-validation-for="EnableDirectContactUs"></span>
                                </div>
                            </div>

                            <nop-nested-setting asp-for="EnableDirectContactUs" disable-auto-generation="true">
                                <div class="form-group row" id="ARContactUs_ContactUsPageUrl">
                                    <div class="col-md-3">
                                        <nop-override-store-checkbox asp-for="ContactUsPageUrl_OverrideForStore" asp-input="ContactUsPageUrl" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                        <nop-label asp-for="ContactUsPageUrl" />
                                    </div>
                                    <div class="col-md-9">
                                        <nop-editor asp-for="ContactUsPageUrl" />
                                        <span asp-validation-for="ContactUsPageUrl"></span>
                                    </div>
                                </div>
                            </nop-nested-setting>

                            <div class="form-group row">
                                <div class="col-md-3">
                                    <nop-override-store-checkbox asp-for="EnableTelegram_OverrideForStore" asp-input="EnableTelegram" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                    <nop-label asp-for="EnableTelegram" />
                                </div>
                                <div class="col-md-9">
                                    <nop-editor asp-for="EnableTelegram" />
                                    <span asp-validation-for="EnableTelegram"></span>
                                </div>
                            </div>

                            <nop-nested-setting asp-for="EnableTelegram" disable-auto-generation="true">
                                <div class="form-group row" id="ARContactUs_TelegramName">
                                    <div class="col-md-3">
                                        <nop-override-store-checkbox asp-for="TelegramName_OverrideForStore" asp-input="TelegramName" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                        <nop-label asp-for="TelegramName" />
                                    </div>
                                    <div class="col-md-9">
                                        <nop-editor asp-for="TelegramName" />
                                        <span asp-validation-for="TelegramName"></span>
                                    </div>
                                </div>
                            </nop-nested-setting>

                            <div class="form-group row">
                                <div class="col-md-3">
                                    <nop-override-store-checkbox asp-for="EnableViber_OverrideForStore" asp-input="EnableViber" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                    <nop-label asp-for="EnableViber" />
                                </div>
                                <div class="col-md-9">
                                    <nop-editor asp-for="EnableViber" />
                                    <span asp-validation-for="EnableViber"></span>
                                </div>
                            </div>

                            <nop-nested-setting asp-for="EnableViber" disable-auto-generation="true">
                                <div class="form-group row" id="ARContactUs_ViberNumber">
                                    <div class="col-md-3">
                                        <nop-override-store-checkbox asp-for="ViberNumber_OverrideForStore" asp-input="ViberNumber" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                        <nop-label asp-for="ViberNumber" />
                                    </div>
                                    <div class="col-md-9">
                                        <nop-editor asp-for="ViberNumber" />
                                        <span asp-validation-for="ViberNumber"></span>
                                    </div>
                                </div>
                            </nop-nested-setting>

                            <script>
                                $(document).ready(function () {
                                    toggleMessengerOption();
                                    toggleSkypeOption();
                                    toggleEmailOption();
                                    toggleCallOption();
                                    toggleTawkOption();
                                    toggleWhatsappOption();
                                    toggleDirectContactUsOption();
                                    toggleTelegramOption();
                                    toggleViberOption();
                                    toggleTeamsOption();
                                    toggleMeetingOption();

                                    $("#@Html.IdFor(model => model.EnableMessenger)").click(toggleMessengerOption);
                                    $("#@Html.IdFor(model => model.EnableSkype)").click(toggleSkypeOption);
                                    $("#@Html.IdFor(model => model.EnableEmail)").click(toggleEmailOption);
                                    $("#@Html.IdFor(model => model.EnableCall)").click(toggleCallOption);
                                    $("#@Html.IdFor(model => model.EnableTawkChat)").click(toggleTawkOption);
                                    $("#@Html.IdFor(model => model.EnableWhatsapp)").click(toggleWhatsappOption);
                                    $("#@Html.IdFor(model => model.EnableDirectContactUs)").click(toggleDirectContactUsOption);
                                    $("#@Html.IdFor(model => model.EnableTelegram)").click(toggleTelegramOption);
                                    $("#@Html.IdFor(model => model.EnableViber)").click(toggleViberOption);
                                    $("#@Html.IdFor(model => model.EnableTeams)").click(toggleTeamsOption);
                                    $("#@Html.IdFor(model => model.EnableMeetingLink)").click(toggleMeetingOption);
                                });

                                function toggleMessengerOption() {
                                    if ($("#@Html.IdFor(model => model.EnableMessenger)").is(':checked')) {
                                        $("#ARContactUs_MessengerId").showElement();
                                    }
                                    else {
                                        $("#ARContactUs_MessengerId").hideElement();
                                    }
                                }

                                function toggleSkypeOption() {
                                    if ($("#@Html.IdFor(model => model.EnableSkype)").is(':checked')) {
                                        $("#ARContactUs_SkypeId").showElement();
                                    }
                                    else {
                                        $("#ARContactUs_SkypeId").hideElement();
                                    }
                                }

                                function toggleEmailOption() {
                                    if ($("#@Html.IdFor(model => model.EnableEmail)").is(':checked')) {
                                        $("#ARContactUs_EmailId").showElement();
                                    }
                                    else {
                                        $("#ARContactUs_EmailId").hideElement();
                                    }
                                }

                                function toggleCallOption() {
                                    if ($("#@Html.IdFor(model => model.EnableCall)").is(':checked')) {
                                        $("#ARContactUs_PhoneNumber").showElement();
                                    }
                                    else {
                                        $("#ARContactUs_PhoneNumber").hideElement();
                                    }
                                }

                                function toggleTawkOption() {
