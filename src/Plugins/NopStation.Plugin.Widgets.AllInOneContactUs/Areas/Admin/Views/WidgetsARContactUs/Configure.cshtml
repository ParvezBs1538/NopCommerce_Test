@model WidgetsARContactUsConfigurationModel
@{
    Layout = "_AdminLayout";
    ViewBag.PageTitle = T("Admin.NopStation.Plugin.Widgets.AllInOneContactUs.Menu.Configuration").Text;

    NopHtml.SetActiveMenuItemSystemName("AllInOneContactUs.Configuration");
}

<form asp-controller="WidgetsARContactUs" asp-action="Configure" method="post">
