                                        <nop-label asp-for="MessengerId" />
                                    </div>
                                    <div class="col-md-9">
                                        <nop-editor asp-for="MessengerId" />
                                        <span asp-validation-for="MessengerId"></span>
                                    </div>
                                </div>
                            </nop-nested-setting>

                            <div class="form-group row">
