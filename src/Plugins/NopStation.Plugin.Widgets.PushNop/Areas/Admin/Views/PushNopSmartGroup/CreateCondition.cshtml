@model SmartGroupConditionModel

@{
    //page title
    ViewBag.PageTitle = T("Admin.NopStation.PushNop.SmartGroupConditions.AddNew").Text;
    //active menu item (system name)
    NopHtml.SetActiveMenuItemSystemName("PWA.SmartGroup");
}

<form asp-controller="PushNopSmartGroup" asp-action="CreateCondition" method="post">
    <div class="content-header clearfix">
        <h1 class="float-left">
            @T("Admin.NopStation.PushNop.SmartGroupConditions.AddNew")
            <small>
                <i class="fa fa-arrow-circle-left"></i>
                <a asp-action="Edit" asp-route-id="@Model.SmartGroupId">@T("Admin.NopStation.PushNop.SmartGroupConditions.BackToSmartGroup")</a>
            </small>
        </h1>
        <div class="float-right">
            <button type="submit" name="save" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.Save")
            </button>
            <button type="submit" name="save-continue" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.SaveContinue")
            </button>
        </div>
    </div>
    @await Html.PartialAsync("_CreateOrUpdateCondition", Model)
</form>