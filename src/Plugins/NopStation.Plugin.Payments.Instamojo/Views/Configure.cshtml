@model ConfigurationModel

@{
    Layout = "_AdminLayout";
    ViewBag.PageTitle = T("Admin.NopStation.Instamojo.Configuration").Text;
    NopHtml.SetActiveMenuItemSystemName("Instamojo.Configuration");
}

<form asp-controller="PaymentInstamojo" asp-action="Configure" method="post">
    <div class="content-header clearfix">
        <h1 class="float-left">
            @T("Admin.NopStation.Instamojo.Configuration")
        </h1>
        <div class="float-right">
            <button type="submit" name="save" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.Save")
            </button>
        </div>
    </div>

    <section class="content">
        <div class="container-fluid">
            <div class="form-horizontal">
                @await Component.InvokeAsync(typeof(StoreScopeConfigurationViewComponent))
                <div asp-validation-summary="All"></div>
                <div class="cards-group">
                    <div class="card card-default">
                        <div class="card-body">
                            @(await Html.LocalizedEditorAsync<ConfigurationModel, ConfigurationModel.ConfigurationLocalizedModel>("plugin-settings-localized",
                                @<div>
                                    <div class="form-group row">
                                        <div class="col-md-3">
                                            <nop-override-store-checkbox asp-for="Description_OverrideForStore" asp-input="@Model.Locales[item].Description" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                            <nop-label asp-for="@Model.Locales[item].Description" />
                                        </div>
                                        <div class="col-md-9">
                                            <nop-editor asp-for="@Model.Locales[item].Description" asp-template="RichEditor" />
                                            <span asp-validation-for="@Model.Locales[item].Description"></span>
                                        </div>
                                    </div>
                                    <input type="hidden" asp-for="@Model.Locales[item].LanguageId" />
                                </div>
                                ,
                                @<div>
                                    <div class="form-group row">
                                        <div class="col-md-3">
                                            <nop-override-store-checkbox asp-for="Description_OverrideForStore" asp-input="Description" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                            <nop-label asp-for="Description" />
                                        </div>
                                        <div class="col-md-9">
                                            <nop-editor asp-for="Description" asp-template="RichEditor" />
                                            <span asp-validation-for="Description"></span>
                                        </div>
                                    </div>
                                </div>
                                ,
                                //localizable settings per store (overridden store settings) are not supported yet
                                true
                                ))
                            <div class="form-group row">
                                <div class="col-md-3">
                                    <nop-override-store-checkbox asp-for="AdditionalFee_OverrideForStore" asp-input="AdditionalFee" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                    <nop-label asp-for="AdditionalFee" />
                                </div>
                                <div class="col-md-9">
                                    <nop-editor asp-for="AdditionalFee" />
                                    <span asp-validation-for="AdditionalFee"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-3">
                                    <nop-override-store-checkbox asp-for="AdditionalFeePercentage_OverrideForStore" asp-input="AdditionalFeePercentage" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                    <nop-label asp-for="AdditionalFeePercentage" />
                                </div>
                                <div class="col-md-9">
                                    <nop-editor asp-for="AdditionalFeePercentage" />
                                    <span asp-validation-for="AdditionalFeePercentage"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-3">
                                    <nop-override-store-checkbox asp-for="UseSandbox_OverrideForStore" asp-input="UseSandbox" asp-store-scope="@Model.ActiveStoreScopeConfiguration" ></nop-override-store-checkbox>
                                    <nop-label asp-for="UseSandbox" ></nop-label>
                                </div>
                                <div class="col-md-9">
                                    <nop-editor asp-for="UseSandbox" ></nop-editor>
                                    <span asp-validation-for="UseSandbox"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-3">
                                    <nop-override-store-checkbox asp-for="PrivateApiKey_OverrideForStore" asp-input="PrivateApiKey" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                    <nop-label asp-for="PrivateApiKey" />
                                </div>
                                <div class="col-md-9">
                                    <nop-editor-check asp-for="PrivateApiKey" asp-required="true" />
                                    <span asp-validation-for="PrivateApiKey"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-3">
                                    <nop-override-store-checkbox asp-for="PrivateAuthToken_OverrideForStore" asp-input="PrivateAuthToken" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                    <nop-label asp-for="PrivateAuthToken" />
                                </div>
                                <div class="col-md-9">
                                    <nop-editor-check asp-for="PrivateAuthToken" asp-required="true" />
                                    <span asp-validation-for="PrivateAuthToken"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-3">
                                    <nop-override-store-checkbox asp-for="PrivateSalt_OverrideForStore" asp-input="PrivateSalt" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                    <nop-label asp-for="PrivateSalt" />
                                </div>
                                <div class="col-md-9">
                                    <nop-editor-check asp-for="PrivateSalt" asp-required="true" />
                                    <span asp-validation-for="PrivateSalt"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-3">
                                    <nop-override-store-checkbox asp-for="EnableSendSMS_OverrideForStore" asp-input="EnableSendSMS" asp-store-scope="@Model.ActiveStoreScopeConfiguration" ></nop-override-store-checkbox>
                                    <nop-label asp-for="EnableSendSMS" ></nop-label>
                                </div>
                                <div class="col-md-9">
                                    <nop-editor asp-for="EnableSendSMS" ></nop-editor>
                                    <span asp-validation-for="EnableSendSMS"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-3">
                                    <nop-override-store-checkbox asp-for="EnableSendEmail_OverrideForStore" asp-input="EnableSendEmail" asp-store-scope="@Model.ActiveStoreScopeConfiguration" ></nop-override-store-checkbox>
                                    <nop-label asp-for="EnableSendEmail" ></nop-label>
                                </div>
                                <div class="col-md-9">
                                    <nop-editor asp-for="EnableSendEmail" ></nop-editor>
                                    <span asp-validation-for="EnableSendEmail"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-3">
                                    <nop-override-store-checkbox asp-for="PhoneNumberRegex_OverrideForStore" asp-input="PhoneNumberRegex" asp-store-scope="@Model.ActiveStoreScopeConfiguration" ></nop-override-store-checkbox>
                                    <nop-label asp-for="PhoneNumberRegex" ></nop-label>
                                </div>
                                <div class="col-md-9">
                                    <nop-editor asp-for="PhoneNumberRegex" ></nop-editor>
                                    <span asp-validation-for="PhoneNumberRegex"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</form>
