@model ConfigurationModel

@{
    ViewBag.PageTitle = T("Admin.NopStation.DynamicSurvey.Configuration").Text;
    //active menu item (system name)
    NopHtml.SetActiveMenuItemSystemName("DynamicSurvey.Configuration");
}

<form asp-controller="DynamicSurvey" asp-action="Configure" method="post">
    <div class="content-header clearfix">
        <h1 class="float-left">
            @T("Admin.NopStation.DynamicSurvey.Configuration")
        </h1>
        <div class="float-right">
            <button type="submit" name="save" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.Save")
            </button>
        </div>
    </div>

    <section class="content">
        <div class="container-fluid">
            <div class="form-horizontal">
                @await Component.InvokeAsync(typeof(StoreScopeConfigurationViewComponent))
                <div asp-validation-summary="All"></div>
                <div class="cards-group">
                    <div class="card card-default">
                        <div class="card-body">
                            <div class="form-group row">
                                <div class="col-md-3">
                                    <nop-override-store-checkbox asp-for="CaptchaEnabled_OverrideForStore" asp-input="CaptchaEnabled" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                    <nop-label asp-for="CaptchaEnabled" />
                                </div>
                                <div class="col-md-9">
                                    <nop-editor asp-for="CaptchaEnabled" />
                                    <span asp-validation-for="CaptchaEnabled"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-3">
                                    <nop-override-store-checkbox asp-for="MinimumIntervalToSubmitSurvey_OverrideForStore" asp-input="MinimumIntervalToSubmitSurvey" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                    <nop-label asp-for="MinimumIntervalToSubmitSurvey" />
                                </div>
                                <div class="col-md-9">
                                    <nop-editor asp-for="MinimumIntervalToSubmitSurvey" asp-postfix="s" />
                                    <span asp-validation-for="MinimumIntervalToSubmitSurvey"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-3">
                                    <nop-override-store-checkbox asp-for="ImageSquarePictureSize_OverrideForStore" asp-input="ImageSquarePictureSize" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                    <nop-label asp-for="ImageSquarePictureSize" />
                                </div>
                                <div class="col-md-9">
                                    <nop-editor asp-for="ImageSquarePictureSize" asp-postfix="px" />
                                    <span asp-validation-for="ImageSquarePictureSize"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-3">
                                    <nop-override-store-checkbox asp-for="CountDisplayedYearsDatePicker_OverrideForStore" asp-input="CountDisplayedYearsDatePicker" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                    <nop-label asp-for="CountDisplayedYearsDatePicker" />
                                </div>
                                <div class="col-md-9">
                                    <nop-editor asp-for="CountDisplayedYearsDatePicker" />
                                    <span asp-validation-for="CountDisplayedYearsDatePicker"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</form>
