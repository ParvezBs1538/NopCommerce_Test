@model SurveyAttributeMappingModel

@{
    //page title
    ViewBag.PageTitle = T("Admin.NopStation.DynamicSurvey.Surveys.SurveyAttributes.EditAttributeDetails").Text;
    //active menu item (system name)
    NopHtml.SetActiveMenuItemSystemName("Surveys");
}

<form asp-controller="Survey" asp-action="SurveyAttributeMappingEdit" method="post" id="surveyattribute-form">
    <div class="content-header clearfix">
        <h1 class="float-left">
            @T("Admin.NopStation.DynamicSurvey.Surveys.SurveyAttributes.EditAttributeDetails")
            <small>
                <i class="fas fa-arrow-circle-left"></i>
                <a asp-action="Edit" asp-route-id="@Model.SurveyId">@T("Admin.NopStation.DynamicSurvey.Surveys.SurveyAttributes.BackToSurvey")</a>
            </small>
        </h1>
        <div class="float-right">
            <button type="submit" name="save" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.Save")
            </button>
            <button type="submit" name="save-continue" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.SaveContinue")
            </button>
            <span id="surveyattribute-delete" class="btn btn-danger">
                <i class="far fa-trash-alt"></i>
                @T("Admin.Common.Delete")
            </span>
        </div>
    </div>
    @await Html.PartialAsync("_CreateOrUpdateSurveyAttributeMapping", Model)
</form>
<nop-delete-confirmation asp-model-id="@Model.Id" asp-action="SurveyAttributeMappingDelete" asp-button-id="surveyattribute-delete" />