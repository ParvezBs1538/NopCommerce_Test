@model ConfigurationModel

@{
    Layout = "_AdminLayout";
    NopHtml.SetActiveMenuItemSystemName("VerifaliaEmailValidator.Configuration");
    ViewBag.PageTitle = T("Admin.NopStation.VerifaliaEmailValidator.Configuration").Text;
}

<form asp-controller="VerifaliaEmailValidator" asp-action="Configure" method="post">
    <div class="content-header clearfix">
        <h1 class="float-left">
            @T("Admin.NopStation.VerifaliaEmailValidator.Configuration")
        </h1>
        <div class="float-right">
            <button type="submit" name="save" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.Save")
            </button>
        </div>
    </div>

    <section class="content">
        <div class="container-fluid">
            <div class="form-horizontal">
                @await Component.InvokeAsync("StoreScopeConfiguration")
                <div asp-validation-summary="All"></div>
                <div class="cards-group">
                    <div class="card card-default">
                        <div class="card-body">
                            <div class="form-group row">
                                <div class="col-md-4">
                                    <nop-override-store-checkbox asp-for="EnablePlugin_OverrideForStore" asp-input="EnablePlugin" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                    <nop-label asp-for="EnablePlugin" />
                                </div>
                                <div class="col-md-8">
                                    <nop-editor asp-for="EnablePlugin" />
                                    <span asp-validation-for="EnablePlugin"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-4">
                                    <nop-override-store-checkbox asp-for="ValidateCustomerAddressEmail_OverrideForStore" asp-input="ValidateCustomerAddressEmail" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                    <nop-label asp-for="ValidateCustomerAddressEmail" />
                                </div>
                                <div class="col-md-8">
                                    <nop-editor asp-for="ValidateCustomerAddressEmail" />
                                    <span asp-validation-for="ValidateCustomerAddressEmail"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-4">
                                    <nop-override-store-checkbox asp-for="ValidateCustomerInfoEmail_OverrideForStore" asp-input="ValidateCustomerInfoEmail" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                    <nop-label asp-for="ValidateCustomerInfoEmail" />
                                </div>
                                <div class="col-md-8">
                                    <nop-editor asp-for="ValidateCustomerInfoEmail" />
                                    <span asp-validation-for="ValidateCustomerInfoEmail"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-4">
                                    <nop-override-store-checkbox asp-for="Username_OverrideForStore" asp-input="Username" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                    <nop-label asp-for="Username" />
                                </div>
                                <div class="col-md-8">
                                    <nop-editor asp-for="Username" />
                                    <span asp-validation-for="Username"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-4">
                                    <nop-override-store-checkbox asp-for="Password_OverrideForStore" asp-input="Password" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                    <nop-label asp-for="Password" />
                                </div>
                                <div class="col-md-8">
                                    <nop-editor asp-for="Password" />
                                    <span asp-validation-for="Password"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-4">
                                    <nop-override-store-checkbox asp-for="ValidateQuality_OverrideForStore" asp-input="ValidateQuality" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                    <nop-label asp-for="ValidateQuality" />
                                </div>
                                <div class="col-md-8">
                                    <nop-editor asp-for="ValidateQuality" />
                                    <span asp-validation-for="ValidateQuality"></span>
                                </div>
                            </div>
                            <nop-nested-setting asp-for="ValidateQuality">
                                <div class="form-group row">
                                    <div class="col-md-4">
                                        <nop-override-store-checkbox asp-for="QualityLevel_OverrideForStore" asp-input="QualityLevel" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                        <nop-label asp-for="QualityLevel" />
                                    </div>
                                    <div class="col-md-8">
                                        <nop-select asp-for="QualityLevel" asp-items="Model.AvailableQualityLevels" />
                                        <span asp-validation-for="QualityLevel"></span>
                                    </div>
                                </div>
                            </nop-nested-setting>
                            <div class="form-group row">
                                <div class="col-md-4">
                                    <nop-override-store-checkbox asp-for="AllowRiskyEmails_OverrideForStore" asp-input="Username" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                    <nop-label asp-for="AllowRiskyEmails" />
                                </div>
                                <div class="col-md-8">
                                    <nop-editor asp-for="AllowRiskyEmails" />
                                    <span asp-validation-for="AllowRiskyEmails"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-4">
                                    <nop-override-store-checkbox asp-for="BlockedDomains_OverrideForStore" asp-input="Username" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                    <nop-label asp-for="BlockedDomains" />
                                </div>
                                <div class="col-md-8">
                                    <nop-editor asp-for="BlockedDomains" />
                                    <span asp-validation-for="BlockedDomains"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-4">
                                    <nop-override-store-checkbox asp-for="RevalidateInvalidEmailsAfterHours_OverrideForStore" asp-input="Username" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                    <nop-label asp-for="RevalidateInvalidEmailsAfterHours" />
                                </div>
                                <div class="col-md-8">
                                    <nop-editor asp-for="RevalidateInvalidEmailsAfterHours" />
                                    <span asp-validation-for="RevalidateInvalidEmailsAfterHours"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-4">
                                    <nop-override-store-checkbox asp-for="EnableLog_OverrideForStore" asp-input="Username" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                    <nop-label asp-for="EnableLog" />
                                </div>
                                <div class="col-md-8">
                                    <nop-editor asp-for="EnableLog" />
                                    <span asp-validation-for="EnableLog"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</form>