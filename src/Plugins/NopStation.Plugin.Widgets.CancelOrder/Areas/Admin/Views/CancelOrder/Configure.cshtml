@model ConfigurationModel
@using NopStation.Plugin.Widgets.CancelOrder.Areas.Admin.Models

@{
    ViewBag.PageTitle = T("Admin.NopStation.CancelOrder.Configuration").Text;

    NopHtml.SetActiveMenuItemSystemName("CancelOrder.Configure");
    Layout = "_AdminLayout";
}

<form asp-controller="CancelOrder" asp-action="Configure" method="post">
    <div class="content-header clearfix">
        <h1 class="float-left">
            @T("Admin.NopStation.CancelOrder.Configuration")
        </h1>
        <div class="float-right">
            <button type="submit" name="save" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.Save")
            </button>
        </div>
    </div>

    <section class="content">
        <div class="container-fluid">
            <div class="form-horizontal">
                @await Component.InvokeAsync("StoreScopeConfiguration")
                <div asp-validation-summary="All"></div>
                <div class="cards-group">
                    <div class="card card-default">
                        <div class="card-body">
                            <div class="form-group row">
                                <div class="col-md-3">
                                    <nop-override-store-checkbox asp-for="WidgetZone_OverrideForStore" asp-input="WidgetZone" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                    <nop-label asp-for="WidgetZone" />
                                </div>
                                <div class="col-md-9">
                                    <nop-editor asp-for="WidgetZone" />
                                    <span asp-validation-for="WidgetZone"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-3">
                                    <nop-override-store-checkbox asp-for="CancellableOrderStatuses_OverrideForStore" asp-input="CancellableOrderStatuses" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                    <nop-label asp-for="CancellableOrderStatuses" />
                                </div>
                                <div class="col-md-9">
                                    <nop-select asp-for="CancellableOrderStatuses" asp-items="Model.AvailableOrderStatuses" asp-multiple="true" />
                                    <span asp-validation-for="CancellableOrderStatuses"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-3">
                                    <nop-override-store-checkbox asp-for="CancellableShippingStatuses_OverrideForStore" asp-input="CancellableShippingStatuses" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                    <nop-label asp-for="CancellableShippingStatuses" />
                                </div>
                                <div class="col-md-9">
                                    <nop-select asp-for="CancellableShippingStatuses" asp-items="Model.AvailableShippingStatuses" asp-multiple="true" />
                                    <span asp-validation-for="CancellableShippingStatuses"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-3">
                                    <nop-override-store-checkbox asp-for="CancellablePaymentStatuses_OverrideForStore" asp-input="CancellablePaymentStatuses" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                    <nop-label asp-for="CancellablePaymentStatuses" />
                                </div>
                                <div class="col-md-9">
                                    <nop-select asp-for="CancellablePaymentStatuses" asp-items="Model.AvailablePaymentStatuses" asp-multiple="true" />
                                    <span asp-validation-for="CancellablePaymentStatuses"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</form>