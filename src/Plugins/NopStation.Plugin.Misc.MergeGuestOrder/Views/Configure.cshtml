@model NopStation.Plugin.Misc.MergeGuestOrder.Models.ConfigurationModel

@{
    Layout = "_AdminLayout";
    ViewBag.PageTitle = T("Admin.NopStation.MergeGuestOrder.Configuration").Text;
    NopHtml.SetActiveMenuItemSystemName("MergeGuestOrder.Configuration");
}

<form asp-controller="MergeGuestOrder" asp-action="Configure" method="post">
    <div class="content-header clearfix">
        <h1 class="float-left">
            @T("Admin.NopStation.MergeGuestOrder.Configuration")
        </h1>
        <div class="float-right">
            <button type="submit" name="save" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.Save")
            </button>
        </div>
    </div>

    <section class="content">
        <div class="container-fluid">
            <div class="form-horizontal">
                @await Component.InvokeAsync("StoreScopeConfiguration")
                <div asp-validation-summary="All"></div>
                <div class="cards-group">
                    <div class="card card-default">
                        <div class="card-body">
                            <div class="form-group row">
                                <div class="col-md-3">
                                    <nop-override-store-checkbox asp-for="EnablePlugin_OverrideForStore" asp-input="EnablePlugin" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                    <nop-label asp-for="EnablePlugin" />
                                </div>
                                <div class="col-md-9">
                                    <nop-editor asp-for="EnablePlugin" />
                                    <span asp-validation-for="EnablePlugin"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-3">
                                    <nop-override-store-checkbox asp-for="CheckEmailInAddressId_OverrideForStore" asp-input="CheckEmailInAddressId" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                    <nop-label asp-for="CheckEmailInAddressId" />
                                </div>
                                <div class="col-md-9">
                                    <nop-select asp-for="CheckEmailInAddressId" asp-items="@Model.AvailableCheckEmailOptions" />
                                    <span asp-validation-for="CheckEmailInAddressId"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-3">
                                    <nop-override-store-checkbox asp-for="AddNoteToOrderOnMerge_OverrideForStore" asp-input="AddNoteToOrderOnMerge" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                    <nop-label asp-for="AddNoteToOrderOnMerge" />
                                </div>
                                <div class="col-md-9">
                                    <nop-editor asp-for="AddNoteToOrderOnMerge" />
                                    <span asp-validation-for="AddNoteToOrderOnMerge"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</form>
