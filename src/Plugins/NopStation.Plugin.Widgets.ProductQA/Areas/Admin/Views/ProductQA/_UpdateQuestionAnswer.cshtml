@model ProductQAModel

<section class="content">
    <div class="container-fluid">
        <div class="form-horizontal">
            <div class="cards-group">
                <div class="card card-default">
                    <div class="card-body">
                        <input type="hidden" asp-for="@Model.Id" />
                        <div class="form-group row">
                            <div class="col-md-3">
                                <nop-label asp-for="@Model.ProductInformation" />
                            </div>
                            <div class="col-md-9">
                                <a class="form-control-link" href="~/Admin/Product/Edit/@Model.ProductId">@Model.ProductInformation</a>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-3">
                                <nop-label asp-for="@Model.CustomerInformation" />
                            </div>
                            <div class="col-md-9">
                                <a class="form-control-link" href="~/Admin/Customer/Edit/@Model.CustomerId">@Model.CustomerInformation</a>
                            </div>
                        </div>
                        <div class="form-group  row">
                            <div class="col-md-3">
                                <nop-label asp-for="@Model.CreatedOnUtc" />
                            </div>
                            <div class="col-md-9 d-flex align-items-center">
                                <span>@Model.CreatedOnUtc</span>
                            </div>
                        </div>
                        @if (Model.AnswerText != null)
                        {
                            <div class="form-group  row">
                                <div class="col-md-3">
                                    <nop-label asp-for="@Model.AnsweredByCustomerName" />
                                </div>
                                <div class="col-md-9">
                                    <a class="form-control-link" href="~/Admin/Customer/Edit/@Model.UpdatedByCustomerId">@Model.AnsweredByCustomerName</a>
                                </div>
                            </div>
                            <div class="form-group  row">
                                <div class="col-md-3">
                                    <nop-label asp-for="@Model.UpdatedOnUtc" />
                                </div>
                                <div class="col-md-9 d-flex align-items-center">
                                    <span>@Model.UpdatedOnUtc</span>
                                </div>
                            </div>
                        }
                        <div class="form-group  row">
                            <div class="col-md-3">
                                <nop-label asp-for="@Model.QuestionText" />
                            </div>
                            <div class="col-md-9">
                                <nop-textarea asp-for="@Model.QuestionText" />
                            </div>
                        </div>
                        <div class="form-group  row">
                            <div class="col-md-3">
                                <nop-label asp-for="@Model.AnswerText" />
                            </div>
                            <div class="col-md-9">
                                <nop-textarea asp-for="@Model.AnswerText" />
                            </div>
                        </div>
                        <div class="form-group  row">
                            <div class="col-md-3">
                                <nop-label asp-for="@Model.IsApproved" />
                            </div>
                            <div class="col-md-9">
                                <nop-editor asp-for="@Model.IsApproved" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
