@model QuoteRequestItemModel

@{
    //page title
    ViewBag.PageTitle = T("Admin.NopStation.Plugin.Misc.QuoteCart.QuoteRequests.EditRequestItem").Text;
}

<form asp-controller="QuoteRequestItem" asp-action="Edit" method="post" id="request-form">
    <div class="content-header clearfix">
        <h1 class="float-left">
            @T("Admin.NopStation.Plugin.Misc.QuoteCart.QuoteRequests.EditRequestItem")
            <small>
                <i class="fas fa-arrow-circle-left"></i>
                <a asp-action="Edit" asp-route-id="@Model.QuoteRequestId" asp-controller="QCQuoteRequest">@T("Admin.NopStation.Plugin.Misc.QuoteCart.QuoteRequest.BackToRequest")</a>
            </small>
        </h1>
        <div class="float-right">
            <button type="submit" name="delete" class="btn btn-danger">
                <i class="far fa-trash-alt"></i>
                @T("Admin.Common.Delete")
            </button>
            <button type="submit" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.Save")
            </button>
        </div>
    </div>

    <div class="content">
        <div class="form-horizontal">
            <div class="cards-group">
                <div asp-validation-summary="ModelOnly"></div>
                <nop-cards id="quoterequest-item-cards">
                    @await Html.PartialAsync("_CreateOrUpdate", Model)
                </nop-cards>
            </div>
        </div>
    </div>
</form>