@model SmartCarouselPictureModel

@{
    Layout = "_AdminPopupLayout";
 
    //page title
    ViewBag.PageTitle = T("Admin.NopStation.SmartCarousels.Carousels.Pictures.EditDetails").Text;
}

<form asp-controller="SmartCarousel" asp-action="PictureEditPopup"
      asp-route-btnId="@Context.Request.Query["btnId"]"
      asp-route-formId="@Context.Request.Query["formId"]">
    <div class="content-header clearfix">
        <h1 class="float-left">
            @T("Admin.NopStation.SmartCarousels.Carousels.Pictures.EditDetails")
        </h1>
        <div class="float-right">
            <button type="submit" name="save" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.Save")
            </button>
        </div>
    </div>
    @await Html.PartialAsync("_CreateOrUpdatePicture", Model)
</form>