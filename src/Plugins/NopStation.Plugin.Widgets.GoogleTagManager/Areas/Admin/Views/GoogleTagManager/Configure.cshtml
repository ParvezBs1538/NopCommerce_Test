@model ConfigurationModel

@{
    ViewBag.PageTitle = T("Admin.NopStation.GoogleTagManager.Configuration").Text;
    NopHtml.SetActiveMenuItemSystemName("GoogleTagManager.Configuration");
    Layout = "_AdminLayout";
}

<form asp-controller="GoogleTagManager" asp-action="Configure" method="post">
    <div class="content-header clearfix">
        <h1 class="float-left">
            @T("Admin.NopStation.GoogleTagManager.Configuration")
        </h1>
        <div class="float-right">
            <button type="submit" name="save" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.Save")
            </button>
        </div>
    </div>

    <section class="content">
        <div class="container-fluid">
            <div class="form-horizontal">
                @await Component.InvokeAsync(typeof(StoreScopeConfigurationViewComponent))
                <div class="cards-group">
                    <div class="card card-default">
                        <div class="card-body">
                            <div class="form-group row">
                                <div class="col-md-3">
                                    <nop-override-store-checkbox asp-for="IsEnable_OverrideForStore" asp-input="IsEnable" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                    <nop-label asp-for="IsEnable" />
                                </div>
                                <div class="col-md-9">
                                    <nop-editor asp-for="IsEnable" />                                   
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-3">
                                    <nop-override-store-checkbox asp-for="GTMContainerId_OverrideForStore" asp-input="GTMContainerId" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                    <nop-label asp-for="GTMContainerId" />
                                </div>
                                <div class="col-md-9">
                                    <nop-editor asp-for="GTMContainerId" />
                                    <span asp-validation-for="GTMContainerId"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>
</form>