@model CategorySEOTemplateModel


<div class="card-body">
    <div class="form-group row">
        <div class="col-md-3">
            <nop-label asp-for="TemplateName" />
        </div>
        <div class="col-md-9">
            <nop-editor asp-for="TemplateName" />
            <span asp-validation-for="TemplateName"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <nop-label asp-for="IsActive" />
        </div>
        <div class="col-md-9">
            <nop-editor asp-for="IsActive" />
            <span asp-validation-for="IsActive"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <nop-label asp-for="Priority" />
        </div>
        <div class="col-md-9">
            <nop-editor asp-for="Priority" />
            <span asp-validation-for="Priority"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <nop-label asp-for="IncludeProductNamesOnKeyword" />
        </div>
        <div class="col-md-9">
            <nop-editor asp-for="IncludeProductNamesOnKeyword" />
            <span asp-validation-for="IncludeProductNamesOnKeyword"></span>
        </div>
    </div>
    <div class="form-group row pnl-product-number">
        <div class="col-md-3">
            <nop-label asp-for="MaxNumberOfProductToInclude" />
        </div>
        <div class="col-md-9">
            <nop-editor asp-for="MaxNumberOfProductToInclude" />
            <span asp-validation-for="MaxNumberOfProductToInclude"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <nop-label asp-for="IsGlobalTemplate" />
        </div>
        <div class="col-md-9">
            <nop-editor asp-for="IsGlobalTemplate" />
            <span asp-validation-for="IsGlobalTemplate"></span>
        </div>
    </div>
    @if (Model.Id > 0)
    {

        <div class="form-group row">
            <div class="col-md-3">
                <nop-label asp-for="CreatedByCustomer" />
            </div>
            <div class="col-md-9">
                <div>@Model.CreatedByCustomer </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-3">
                <nop-label asp-for="CreatedOn" />
            </div>
            <div class="col-md-9">
                <div>@Model.CreatedOn </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-3">
                <nop-label asp-for="LastUpdatedByCustomer" />
            </div>
            <div class="col-md-9">
                <div>@Model.LastUpdatedByCustomer</div>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-3">
                <nop-label asp-for="UpdatedOn" />
            </div>
            <div class="col-md-9">
                <div>@Model.UpdatedOn</div>
            </div>
        </div>
    }
    <div class="form-group row">
        <div class="col-md-3">
            <nop-label asp-for="SelectedStoreIds" />
        </div>
        <div class="col-md-9">
            <div class="row">
                <div class="col-md-4">
                    <nop-select asp-for="SelectedStoreIds" asp-items="Model.AvailableStores" asp-multiple="true" />
                    <script>
                        $(document).ready(function () {
                            var storesIdsInput = $('#@Html.IdFor(model => model.SelectedStoreIds)')
                                .data("kendoMultiSelect");
                            storesIdsInput.setOptions({
                                autoClose: false,
                                filter: "contains"
                            });

                            @if (Model.AvailableStores.Count == 0)
                            {
                                <text>
                                        storesIdsInput.setOptions({
                                            enable: false,
                                            placeholder: 'No stores available'
                                        });
                                    storesIdsInput._placeholder();
                                    storesIdsInput._enable();
                                </text>
                            }
                        });
                    </script>
                </div>
                @*<div class="col-md-8">
                @await Component.InvokeAsync("MultistoreDisabledWarning")
                </div>*@
            </div>
        </div>
    </div>
</div>