@model CategorySEOTemplateModel

@{
    Layout = "_AdminLayout";
    ViewBag.PageTitle = T("Admin.NopStation.Plugin.Misc.AdvancedSEO.CategorySEOTemplate.Edit.Title").Text;
    NopHtml.SetActiveMenuItemSystemName("NopStation.AdvancedSEO.CategorySEOTemplate");
}

<form asp-controller="CategorySEOTemplate" asp-action="Edit" method="post" id="EditCategorySEOTemplate">
    <div class="content-header clearfix">
        <h1 class="float-left">
            @T("Admin.NopStation.Plugin.Misc.AdvancedSEO.CategorySEOTemplate.Edit") - @Model.TemplateName
            <small>
                <i class="fas fa-arrow-circle-left"></i>
                <a asp-action="List">@T("Admin.NopStation.Plugin.Misc.AdvancedSEO.CategorySEOTemplate.BackToList")</a>
            </small>
        </h1>
        <div class="float-right">
            <button type="submit" name="save" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.Save")
            </button>
            <button type="submit" name="save-continue" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.SaveContinue")
            </button>
            <span id="category-seo-template-delete" class="btn btn-danger">
                <i class="far fa-trash-alt"></i>
                @T("Admin.Common.Delete")
            </span>
        </div>
    </div>
    @await Html.PartialAsync("_CreateOrUpdate", Model)
</form>

<nop-delete-confirmation asp-model-id="@Model.Id" asp-button-id="category-seo-template-delete" />