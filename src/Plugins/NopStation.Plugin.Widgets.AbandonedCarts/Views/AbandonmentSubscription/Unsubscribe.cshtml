@{
    Layout = "_ColumnsTwo";

    //title
    NopHtml.AddTitleParts(T("Plugins.Widgets.AbandonedCarts.Unsubscribe").Text);
    //page class
    NopHtml.AppendPageCssClassParts("html-account-page");
    NopHtml.AppendPageCssClassParts("html-change-password-page");
    var returnurl = Context.Request.Query["returnurl"];
}
@section left
{
    @await Component.InvokeAsync(typeof(CustomerNavigationViewComponent))
}

<div class="page account-page change-password-page">
    <div class="page-title">
        <h1>Abandoned Carts - Unsubscribe from mail list</h1>
    </div>
    <div class="page-body">
        <form asp-controller="AbandonmentSubscription" asp-action="Unsubscribe" method="post" asp-route-returnurl="@returnurl">
           
            <br />
            <br />

            <div class="buttons">
                <button type="submit" class="button-1 change-password-button">Unsubscribe</button>
            </div>
        </form>
    </div>
</div>
