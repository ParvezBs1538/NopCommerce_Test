@model ConfigurationModel

@{
    Layout = "_AdminLayout";
    NopHtml.SetActiveMenuItemSystemName("ProductBadge.Configuration");
    ViewBag.PageTitle = T("Admin.NopStation.ProductBadge.Menu.Configuration").Text;
}

<form asp-controller="ProductBadge" asp-action="Configure" method="post">
    <div class="content-header clearfix">
        <h1 class="float-left">
            @T("Admin.NopStation.ProductBadge.Menu.Configuration")
        </h1>
        <div class="float-right">
            <button type="submit" name="save" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.Save")
            </button>
        </div>
    </div>

    <section class="content">
        <div class="container-fluid">
            <div class="form-horizontal">
                @await Component.InvokeAsync(typeof(StoreScopeConfigurationViewComponent))
                <div asp-validation-summary="All"></div>
                <div class="cards-group">
                    <div class="card card-default">
                        <div class="card-body">
                            <div class="form-group row">
                                <div class="col-md-3">
                                    <nop-label asp-for="CacheActiveBadges" />
                                </div>
                                <div class="col-md-9">
                                    <nop-editor asp-for="CacheActiveBadges" />
                                    <span asp-validation-for="CacheActiveBadges"></span>
                                </div>
                            </div>
                            @*<div class="form-group row">
                                <div class="col-md-3">
                                    <nop-override-store-checkbox asp-for="EnableAjaxLoad_OverrideForStore" asp-input="EnableAjaxLoad" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                    <nop-label asp-for="EnableAjaxLoad" />
                                </div>
                                <div class="col-md-9">
                                    <nop-editor asp-for="EnableAjaxLoad" />
                                    <span asp-validation-for="EnableAjaxLoad"></span>
                                </div>
                            </div>*@
                            <div class="form-group row">
                                <div class="col-md-3">
                                    <nop-override-store-checkbox asp-for="ProductDetailsWidgetZone_OverrideForStore" asp-input="ProductDetailsWidgetZone" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                    <nop-label asp-for="ProductDetailsWidgetZone" />
                                </div>
                                <div class="col-md-9">
                                    <nop-editor asp-for="ProductDetailsWidgetZone" />
                                    <span asp-validation-for="ProductDetailsWidgetZone"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-3">
                                    <nop-override-store-checkbox asp-for="ProductBoxWidgetZone_OverrideForStore" asp-input="ProductBoxWidgetZone" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                    <nop-label asp-for="ProductBoxWidgetZone" />
                                </div>
                                <div class="col-md-9">
                                    <nop-editor asp-for="ProductBoxWidgetZone" />
                                    <span asp-validation-for="ProductBoxWidgetZone"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-3">
                                    <nop-override-store-checkbox asp-for="SmallBadgeWidth_OverrideForStore" asp-input="SmallBadgeWidth" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                    <nop-label asp-for="SmallBadgeWidth" />
                                </div>
                                <div class="col-md-9">
                                    <nop-editor asp-for="SmallBadgeWidth" asp-postfix="px" />
                                    <span asp-validation-for="SmallBadgeWidth"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-3">
                                    <nop-override-store-checkbox asp-for="MediumBadgeWidth_OverrideForStore" asp-input="MediumBadgeWidth" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                    <nop-label asp-for="MediumBadgeWidth" />
                                </div>
                                <div class="col-md-9">
                                    <nop-editor asp-for="MediumBadgeWidth" asp-postfix="px" />
                                    <span asp-validation-for="MediumBadgeWidth"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-3">
                                    <nop-override-store-checkbox asp-for="LargeBadgeWidth_OverrideForStore" asp-input="LargeBadgeWidth" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                    <nop-label asp-for="LargeBadgeWidth" />
                                </div>
                                <div class="col-md-9">
                                    <nop-editor asp-for="LargeBadgeWidth" asp-postfix="px" />
                                    <span asp-validation-for="LargeBadgeWidth"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-3">
                                    <nop-override-store-checkbox asp-for="IncreaseWidthInDetailsPageByPercentage_OverrideForStore" asp-input="IncreaseWidthInDetailsPageByPercentage" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                    <nop-label asp-for="IncreaseWidthInDetailsPageByPercentage" />
                                </div>
                                <div class="col-md-9">
                                    <nop-editor asp-for="IncreaseWidthInDetailsPageByPercentage" />
                                    <span asp-validation-for="IncreaseWidthInDetailsPageByPercentage"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</form>
