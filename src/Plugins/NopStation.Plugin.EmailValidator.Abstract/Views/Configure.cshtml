@model ConfigurationModel

@{
    Layout = "_AdminLayout";
    NopHtml.SetActiveMenuItemSystemName("AbstractEmailValidator.Configuration");
    ViewBag.PageTitle = T("Admin.NopStation.AbstractEmailValidator.Configuration").Text;
}

<form asp-controller="AbstractEmailValidator" asp-action="Configure" method="post">
    <div class="content-header clearfix">
        <h1 class="float-left">
            @T("Admin.NopStation.AbstractEmailValidator.Configuration")
        </h1>
        <div class="float-right">
            <button type="submit" name="save" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.Save")
            </button>
        </div>
    </div>

    <section class="content">
        <div class="container-fluid">
            <div class="form-horizontal">
                @await Component.InvokeAsync("StoreScopeConfiguration")
                <div asp-validation-summary="All"></div>
                <div class="cards-group">
                    <div class="card card-default">
                        <div class="card-body">
                            <div class="form-group row">
                                <div class="col-md-4">
                                    <nop-override-store-checkbox asp-for="EnablePlugin_OverrideForStore" asp-input="EnablePlugin" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                    <nop-label asp-for="EnablePlugin" />
                                </div>
                                <div class="col-md-8">
                                    <nop-editor asp-for="EnablePlugin" />
                                    <span asp-validation-for="EnablePlugin"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-4">
                                    <nop-override-store-checkbox asp-for="ValidateCustomerAddressEmail_OverrideForStore" asp-input="ValidateCustomerAddressEmail" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                    <nop-label asp-for="ValidateCustomerAddressEmail" />
                                </div>
                                <div class="col-md-8">
                                    <nop-editor asp-for="ValidateCustomerAddressEmail" />
                                    <span asp-validation-for="ValidateCustomerAddressEmail"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-4">
                                    <nop-override-store-checkbox asp-for="ValidateCustomerInfoEmail_OverrideForStore" asp-input="ValidateCustomerInfoEmail" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                    <nop-label asp-for="ValidateCustomerInfoEmail" />
                                </div>
                                <div class="col-md-8">
                                    <nop-editor asp-for="ValidateCustomerInfoEmail" />
                                    <span asp-validation-for="ValidateCustomerInfoEmail"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-4">
                                    <nop-override-store-checkbox asp-for="ApiKey_OverrideForStore" asp-input="ApiKey" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                    <nop-label asp-for="ApiKey" />
                                </div>
                                <div class="col-md-8">
                                    <nop-editor asp-for="ApiKey" />
                                    <span asp-validation-for="ApiKey"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-4">
                                    <nop-override-store-checkbox asp-for="AllowRiskyEmails_OverrideForStore" asp-input="ApiKey" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                    <nop-label asp-for="AllowRiskyEmails" />
                                </div>
                                <div class="col-md-8">
                                    <nop-editor asp-for="AllowRiskyEmails" />
                                    <span asp-validation-for="AllowRiskyEmails"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-4">
                                    <nop-override-store-checkbox asp-for="BlockedDomains_OverrideForStore" asp-input="ApiKey" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                    <nop-label asp-for="BlockedDomains" />
                                </div>
                                <div class="col-md-8">
                                    <nop-editor asp-for="BlockedDomains" />
                                    <span asp-validation-for="BlockedDomains"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-4">
                                    <nop-override-store-checkbox asp-for="RevalidateInvalidEmailsAfterHours_OverrideForStore" asp-input="ApiKey" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                    <nop-label asp-for="RevalidateInvalidEmailsAfterHours" />
                                </div>
                                <div class="col-md-8">
                                    <nop-editor asp-for="RevalidateInvalidEmailsAfterHours" />
                                    <span asp-validation-for="RevalidateInvalidEmailsAfterHours"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-4">
                                    <nop-override-store-checkbox asp-for="EnableLog_OverrideForStore" asp-input="ApiKey" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                    <nop-label asp-for="EnableLog" />
                                </div>
                                <div class="col-md-8">
                                    <nop-editor asp-for="EnableLog" />
                                    <span asp-validation-for="EnableLog"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</form>