@model MapShipmentItemFieldsModel

@{
    //Layout = "_AdminPopupLayout";
    Layout = "_AdminLayout";
    ViewBag.PageTitle = T("Admin.NopStation.ZohoCRM.MapShipmentItemFields").Text;
    NopHtml.SetActiveMenuItemSystemName("ZohoCRM.Configuration");
}

@if (Model.CloseWindow)
{
    <script>
        window.close();
    </script>
}

<form asp-controller="ZohoCRM" asp-action="MapShipmentItemFields">
    <div class="content-header clearfix">
        <h1 class="float-left">
            @T("Admin.NopStation.ZohoCRM.MapShipmentItemFields")
        </h1>
        <div class="float-right">
            <button type="submit" name="save" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.Save")
            </button>
        </div>
    </div>

    <section class="content">
        <div class="container-fluid">
            <div class="form-horizontal">
                <div class="cards-group">
                    <div class="card card-default card-popup">
                        <div class="card-body">
                            <div class="form-group row">
                                <div class="col-sm-4">
                                    <nop-label asp-for="ShipmentField" />
                                </div>
                                <div class="col-sm-8">
                                    <input asp-for="ShipmentField" class="form-control text-box single-line" readonly />
                                    <span asp-validation-for="ShipmentField"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-4">
                                    <nop-label asp-for="ProductField" />
                                </div>
                                <div class="col-sm-8">
                                    <input asp-for="ProductField" class="form-control text-box single-line" readonly />
                                    <span asp-validation-for="ProductField"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-4">
                                    <nop-label asp-for="QuantityField" />
                                </div>
                                <div class="col-sm-8">
                                    <nop-select asp-for="QuantityField" asp-items="@Model.AvailableFields" />
                                    <span asp-validation-for="QuantityField"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</form>