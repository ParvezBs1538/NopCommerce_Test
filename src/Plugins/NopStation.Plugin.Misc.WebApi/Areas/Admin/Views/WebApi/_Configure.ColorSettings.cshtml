        <div class="col-md-9">
            <nop-editor asp-for="GradientEnabled" />
            <span asp-validation-for="GradientEnabled"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <nop-label asp-for="ResetToDefaultColors" />
        </div>
        <div class="col-md-9">
            <nop-editor asp-for="ResetToDefaultColors" />
        </div>
    </div>
    <nop-nested-setting asp-for="ResetToDefaultColors">
        <div id="pnlResetToDefaultColors" class="form-group row">
            <div class="col-md-3">
                <label></label>
            </div>
            <div class="col-md-9">
                <div id="resetToDefaultColors" class="btn bg-red">
                    <i class="fa fa-refresh"></i>
                    @T("Admin.NopStation.WebApi.Configuration.ResetToDefaultColors")
                </div>
            </div>
        </div>
    </nop-nested-setting>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#@Html.IdFor(model => model.PrimaryThemeColor)Picker").change(function () {
            $("#@Html.IdFor(model => model.PrimaryThemeColor)").val($(this).val());
        });
        $("#@Html.IdFor(model => model.BottomBarActiveColor)Picker").change(function () {
            $("#@Html.IdFor(model => model.BottomBarActiveColor)").val($(this).val());
        });
        $("#@Html.IdFor(model => model.BottomBarBackgroundColor)Picker").change(function () {
            $("#@Html.IdFor(model => model.BottomBarBackgroundColor)").val($(this).val());
        });
        $("#@Html.IdFor(model => model.BottomBarInactiveColor)Picker").change(function () {
            $("#@Html.IdFor(model => model.BottomBarInactiveColor)").val($(this).val());
        });
        $("#@Html.IdFor(model => model.TopBarBackgroundColor)Picker").change(function () {
            $("#@Html.IdFor(model => model.TopBarBackgroundColor)").val($(this).val());
        });
        $("#@Html.IdFor(model => model.TopBarTextColor)Picker").change(function () {
            $("#@Html.IdFor(model => model.TopBarTextColor)").val($(this).val());
        });
        $("#@Html.IdFor(model => model.GradientStartingColor)Picker").change(function () {
            $("#@Html.IdFor(model => model.GradientStartingColor)").val($(this).val());
        });
        $("#@Html.IdFor(model => model.GradientMiddleColor)Picker").change(function () {
            $("#@Html.IdFor(model => model.GradientMiddleColor)").val($(this).val());
        });
        $("#@Html.IdFor(model => model.GradientEndingColor)Picker").change(function () {
            $("#@Html.IdFor(model => model.GradientEndingColor)").val($(this).val());
        });

        $("#@Html.IdFor(model => model.ResetToDefaultColors)").click(toggleResetToDefaultColors);

        toggleResetToDefaultColors();

        $("#resetToDefaultColors").on("click", function () {
            if (confirm("@T("Admin.NopStation.WebApi.Configuration.ResetColors.Confirmation")")) {
                $("#@Html.IdFor(model => model.PrimaryThemeColor)Picker").val("@WebApiDefaults.PrimaryThemeColor");
                $("#@Html.IdFor(model => model.PrimaryThemeColor)").val("@WebApiDefaults.PrimaryThemeColor");

                $("#@Html.IdFor(model => model.BottomBarActiveColor)Picker").val("@WebApiDefaults.BottomBarActiveColor");
                $("#@Html.IdFor(model => model.BottomBarActiveColor)").val("@WebApiDefaults.BottomBarActiveColor");

                $("#@Html.IdFor(model => model.BottomBarInactiveColor)Picker").val("@WebApiDefaults.BottomBarInactiveColor");
                $("#@Html.IdFor(model => model.BottomBarInactiveColor)").val("@WebApiDefaults.BottomBarInactiveColor");

                $("#@Html.IdFor(model => model.BottomBarBackgroundColor)Picker").val("@WebApiDefaults.BottomBarBackgroundColor");
                $("#@Html.IdFor(model => model.BottomBarBackgroundColor)").val("@WebApiDefaults.BottomBarBackgroundColor");

                $("#@Html.IdFor(model => model.TopBarBackgroundColor)Picker").val("@WebApiDefaults.TopBarBackgroundColor");
                $("#@Html.IdFor(model => model.TopBarBackgroundColor)").val("@WebApiDefaults.TopBarBackgroundColor");

                $("#@Html.IdFor(model => model.TopBarTextColor)Picker").val("@WebApiDefaults.TopBarTextColor");
                $("#@Html.IdFor(model => model.TopBarTextColor)").val("@WebApiDefaults.TopBarTextColor");

                $("#@Html.IdFor(model => model.GradientStartingColor)Picker").val("@WebApiDefaults.GradientStartingColor");
                $("#@Html.IdFor(model => model.GradientStartingColor)").val("@WebApiDefaults.GradientStartingColor");

                $("#@Html.IdFor(model => model.GradientMiddleColor)Picker").val("@WebApiDefaults.GradientMiddleColor");
                $("#@Html.IdFor(model => model.GradientMiddleColor)").val("@WebApiDefaults.GradientMiddleColor");

                $("#@Html.IdFor(model => model.GradientEndingColor)Picker").val("@WebApiDefaults.GradientEndingColor");
                $("#@Html.IdFor(model => model.GradientEndingColor)").val("@WebApiDefaults.GradientEndingColor");
            }
        });
    });

    function toggleResetToDefaultColors() {
        if ($('#@Html.IdFor(model => model.ResetToDefaultColors)').is(':checked')) {
            $('#pnlResetToDefaultColors').show();
        } else {
            $('#pnlResetToDefaultColors').hide();
        }
    }
</script>