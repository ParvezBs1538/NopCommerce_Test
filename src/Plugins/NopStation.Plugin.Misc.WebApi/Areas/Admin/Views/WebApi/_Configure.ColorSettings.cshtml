        <div class="col-md-3">
            <nop-override-store-checkbox asp-for="GradientEnabled_OverrideForStore" asp-input="GradientEnabled" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
            <nop-label asp-for="GradientEnabled" />
