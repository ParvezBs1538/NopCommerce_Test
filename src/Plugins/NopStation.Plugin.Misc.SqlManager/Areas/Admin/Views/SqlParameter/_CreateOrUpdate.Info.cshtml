@model SqlParameterModel

<div class="card-body">
    <div class="form-group row">
        <div class="col-md-3">
            <nop-label asp-for="Name" />
        </div>
        <div class="col-md-9">
            <nop-editor asp-for="Name" asp-required="true" />
            <span asp-validation-for="Name"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <nop-label asp-for="SystemName" />
        </div>
        <div class="col-md-9">
            <nop-editor asp-for="SystemName" asp-required="true" />
            <span asp-validation-for="SystemName"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <nop-label asp-for="DataTypeId" />
        </div>
        <div class="col-md-9">
            <nop-select asp-for="DataTypeId" asp-items="@Model.AvailableDataTypes" onchange="CheckAndHideSqlparameterRequirements()" />
            <span asp-validation-for="DataTypeId"></span>
            <script>
                function CheckAndHideSqlparameterRequirements() {
                    var dataTypeValue = $("#DataTypeId").val();
                    if (dataTypeValue == '7' || dataTypeValue == '8') {
                        $("#sqlparameter-requirements").hide()
                    }
                    else {
                        $("#sqlparameter-requirements").show()
                    }
                }
            </script>
        </div>
    </div>
</div>