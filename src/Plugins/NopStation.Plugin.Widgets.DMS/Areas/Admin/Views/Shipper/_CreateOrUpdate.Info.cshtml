@model ShipperModel

<div class="card-body">
    <div class="form-group row">
        <div class="col-md-4">
            <nop-label asp-for="CustomerName" />
        </div>
        <div class="col-md-8">
            <a asp-controller="Customer" asp-action="Edit" asp-route-id="@Model.CustomerId">@Model.CustomerName</a>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-4">
            <nop-label asp-for="Online" />
        </div>
        <div class="col-md-8">
            <input class="check-box" type="checkbox" asp-for="Online" disabled value="@Model.Online">
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-4">
            <nop-label asp-for="Active" />
        </div>
        <div class="col-md-8">
            <nop-editor asp-for="Active" />
            <span asp-validation-for="Active"></span>
        </div>
    </div>
    @if(Model.Online){
        <div class="form-group row">
            <div class="col-md-4">
                <nop-label asp-for="LastLocation" />
            </div>
            <div class="col-md-8">
                <div class="form-text-row">@Model.LastLocation</div>
            </div>
        </div>
    }
    <div class="form-group row">
        <div class="col-md-4">
            <nop-label asp-for="CreatedOn" />
        </div>
        <div class="col-md-8">
            <div class="col-md-8">
                <div class="form-text-row">@Model.CreatedOn</div>
            </div>
        </div>
    </div>
    @if (Model.UpdatedOn != null)
    {
        <div class="form-group row">
            <div class="col-md-4">
                <nop-label asp-for="UpdatedOn" />
            </div>
            <div class="col-md-8">
                <div class="col-md-8">

                    <div class="form-text-row">@Model.UpdatedOn</div>

                </div>
            </div>
        </div>
    }
</div>

