    <None Remove="Areas\Admin\Views\ProductTab\_CreateOrUpdate.TabItem.Products.cshtml" />
    <None Remove="Areas\Admin\Views\_ViewImports.cshtml" />
    <None Remove="release_note.txt" />
    <None Remove="Views\Shared\Components\ProductTabFooterHtmlTag\Default.cshtml" />
    <None Remove="Views\Shared\Components\ProductTab\Default.cshtml" />
    <None Remove="Views\_ViewImports.cshtml" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Areas\Admin\Views\ProductTab\Configure.cshtml">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Areas\Admin\Views\ProductTab\Create.cshtml">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
