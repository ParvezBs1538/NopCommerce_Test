<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
	  <OutputPath>..\..\Presentation\Nop.Web\Plugins\NopStation.Plugin.Widgets.ProductTabs</OutputPath>
    <Version>4.70.1.0</Version>
    <Authors>Nop-Station Team</Authors>
    <Company>Nop-Station</Company>
    <AssemblyVersion>4.70.1.0</AssemblyVersion>
    <FileVersion>4.70.1.0</FileVersion>
    <Product>Nop-Station Product Tab</Product>
    <NeutralLanguage>en</NeutralLanguage>
    <OutDir>$(OutputPath)</OutDir>
    <Description>This plugin allows to display product tabs on public store.</Description>
    <Copyright>Nop-Station Team</Copyright>
    <PackageTags>NopStation,ProductTab,Tab,NopCommerce,Plugin</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Areas\Admin\Views\ProductTab\Configure.cshtml" />
